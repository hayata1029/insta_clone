<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", mypage_path(@user) %></span>
      <span><b>画像投稿</b><%= @user.photoposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
      <div class="avatars">
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, size:30), mypage_path(user) %>
        <% end %>
      </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
          <li>
            <%= gravatar_for(user, size:50) %>
            <%= link_to user.name, mypage_path(user) %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>