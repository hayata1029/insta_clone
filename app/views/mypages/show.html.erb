<h1><%= @user.name%></h1>
<div><%= link_to 'プロフィールの編集', edit_user_registration_path %></div>
<aside class="col-md-4">
  <h1>
    <%= gravatar_for @user %>
    <%= render 'follow_form' if user_signed_in? %>
  </h1>
  <section class="stats">
    <%= render 'shared/stats' %>
  </section>
</aside>
<!--検索拡張機能-->
  <%= form_tag mypage_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "検索", :name => nil %>
    </p>
  <% end %>
<div class="col-md-8">
<h3><%= @user.photoposts.count %>投稿</h3>
  <ol class="photoposts">
     <%= render @photoposts %>
  </ol>
</div>



